        </HBox>
    </VBox>
    <ImageView fitHeight="78.0" fitWidth="75.0" layoutX="516.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../../Images/Calque_1-2.png" />
